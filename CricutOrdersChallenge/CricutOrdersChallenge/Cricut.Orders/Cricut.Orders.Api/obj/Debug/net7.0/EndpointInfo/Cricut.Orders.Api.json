{
  "openapi": "3.0.1",
  "info": {
    "title": "Cricut.Orders.Api",
    "version": "1.0"
  },
  "paths": {
    "/v1/orders": {
      "post": {
        "tags": [
          "Orders"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrderViewModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrderViewModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrderViewModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OrderViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderViewModel"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Orders"
        ],
        "parameters": [
          {
            "name": "orderId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OrderViewModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderViewModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderViewModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CustomerViewModel": {
        "required": [
          "email",
          "id",
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "address": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "NewOrderViewModel": {
        "required": [
          "customer",
          "orderItems"
        ],
        "type": "object",
        "properties": {
          "customer": {
            "$ref": "#/components/schemas/CustomerViewModel"
          },
          "orderItems": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItemViewModel"
            }
          }
        },
        "additionalProperties": false
      },
      "OrderItemViewModel": {
        "required": [
          "product",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "product": {
            "$ref": "#/components/schemas/ProductViewModel"
          },
          "quantity": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "OrderStatus": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "OrderViewModel": {
        "required": [
          "customer",
          "orderItems"
        ],
        "type": "object",
        "properties": {
          "customer": {
            "$ref": "#/components/schemas/CustomerViewModel"
          },
          "orderItems": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItemViewModel"
            }
          },
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "status": {
            "$ref": "#/components/schemas/OrderStatus"
          },
          "total": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "ProductViewModel": {
        "required": [
          "id",
          "price"
        ],
        "type": "object",
        "properties": {
          "id": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "price": {
            "minimum": 0,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}